@model WebApplication1.Models.ViewModel.CategoryProductVM
@{
    ViewData["Title"] = "Home Page";
}

<h1>List of View</h1>

<h2>Category Table</h2>
<table border="1">
    <thead>
        <tr>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.CategoryVMs)
        {
            <tr>
                <td>@i.CategoryName</td>
                <td>
                    <a asp-controller="Category"
                       asp-action="GetSingle"
                       asp-route-categoryname="@i.CategoryName"
                       class="btn btn-primary">
                        View
                    </a>
                </td>
            </tr>
        
        }
    </tbody>
</table>

<h2>Product Table</h2>
<table border="1">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.ProductVMs)
        {
            <tr>
                <td>@i.ProductName</td>
                <td>@i.Quantity</td>
            </tr>
        }
    </tbody>
</table>
